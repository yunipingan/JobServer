<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.pingweb.dao.SeekerDao">
	<resultMap id="Seeker" type="cn.pingweb.model.Seeker">
    	<id property="openid" column="id" jdbcType="VARCHAR" />
		<result property="name" column="name" jdbcType="VARCHAR" />		
		<result property="birthday" column="birthday" jdbcType="VARCHAR" />		
		<result property="sex" column="sex" jdbcType="VARCHAR" />		
		<result property="telephone" column="telephone" jdbcType="VARCHAR" />	
		<result property="email" column="email" jdbcType="VARCHAR" />	
		<result property="avatarUrl" column="avatarUrl" jdbcType="VARCHAR" />	
		<result property="city" column="city" jdbcType="VARCHAR" />
		<result property="degree" column="degree" jdbcType="VARCHAR" />	
		<result property="electronic_resume" column="electronic_resume" jdbcType="VARCHAR" />
		<result property="hope_job" column="hope_job" jdbcType="VARCHAR" />
	</resultMap>

	<sql id="TableName">
		seeker
	</sql>
	
	<select id="selectFromOpenid" resultMap="Seeker">
		select * from <include refid="TableName" />
		where id = #{openid}
	</select>
	
	<insert id="newSeeker" parameterType="cn.pingweb.model.Seeker">
		insert into <include refid="TableName" />
		(id) values(#{openid})
	</insert>
	
	<update id='updateSeeker' parameterType="cn.pingweb.model.Seeker">
		update <include refid="TableName"/> set
			name=#{name},
			birthday=#{birthday},
			sex=#{sex},
			telephone=#{telephone},
			email=#{email},
			avatarUrl=#{avatarUrl},
			city=#{city},
			degree=#{degree},
			electronic_resume=#{electronic_resume}
		where
			id=#{openid}
			
	</update>
	
	<update id='updateAvatar' parameterType="cn.pingweb.model.Seeker">
		update <include refid="TableName"/> set
			avatarUrl=#{avatarUrl}
		where
			id=#{openid}			
	</update>
	
	<update id='updateSeekerName' parameterType="cn.pingweb.model.Seeker">
		update <include refid="TableName"/> set
			name=#{name}
		where
			id=#{openid}			
	</update>
	
	<update id='updateHope_job' parameterType="cn.pingweb.model.Seeker">
		update <include refid="TableName"/> set
			hope_job=#{hope_job}
		where
			id=#{openid}
	</update>
	
</mapper>

<!-- parameterType:使用的参数类型
id:方法名
resultMap和resultType不能一起用 -->
